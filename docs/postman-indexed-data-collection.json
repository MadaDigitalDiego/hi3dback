      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/explorer/indexed-data",
          "host": ["{{base_url}}"],
          "path": ["api", "explorer", "indexed-data"]
        },
        "description": "Retrieve all indexed data from MeiliSearch with default pagination (page 1, 20 items per page)"
      },
      "response": []
    },
